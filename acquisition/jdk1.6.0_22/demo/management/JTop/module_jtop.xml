<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jtop" default="compile.module.jtop">
  <dirname property="module.jtop.basedir" file="${ant.file.module_jtop}"/>
  
  <property name="module.jdk.home.jtop" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jtop" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jtop" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jtop" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="jtop.output.dir" value="${module.jtop.basedir}/../../../../out/production/JTop"/>
  <property name="jtop.testoutput.dir" value="${module.jtop.basedir}/../../../../out/test/JTop"/>
  
  <path id="jtop.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jtop.module.production.classpath">
    <path refid="${module.jdk.classpath.jtop}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jtop.runtime.production.module.classpath">
    <pathelement location="${jtop.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jtop.module.classpath">
    <path refid="${module.jdk.classpath.jtop}"/>
    <pathelement location="${jtop.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jtop.runtime.module.classpath">
    <pathelement location="${jtop.testoutput.dir}"/>
    <pathelement location="${jtop.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jtop">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jtop">
    <patternset refid="excluded.from.module.jtop"/>
  </patternset>
  
  <path id="jtop.module.sourcepath">
    <dirset dir="${module.jtop.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jtop" depends="compile.module.jtop.production,compile.module.jtop.tests" description="Compile module JTop"/>
  
  <target name="compile.module.jtop.production" depends="register.custom.compilers" description="Compile module JTop; production classes">
    <mkdir dir="${jtop.output.dir}"/>
    <javac2 destdir="${jtop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jtop}/javac">
      <compilerarg line="${compiler.args.jtop}"/>
      <bootclasspath refid="jtop.module.bootclasspath"/>
      <classpath refid="jtop.module.production.classpath"/>
      <src refid="jtop.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jtop"/>
    </javac2>
    
    <copy todir="${jtop.output.dir}">
      <fileset dir="${module.jtop.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jtop.tests" depends="register.custom.compilers,compile.module.jtop.production" description="compile module JTop; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jtop" description="cleanup module">
    <delete dir="${jtop.output.dir}"/>
    <delete dir="${jtop.testoutput.dir}"/>
  </target>
</project>