<?xml version="1.0" encoding="UTF-8"?>
<project name="module_verbosegc" default="compile.module.verbosegc">
  <dirname property="module.verbosegc.basedir" file="${ant.file.module_verbosegc}"/>
  
  <property name="module.jdk.home.verbosegc" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.verbosegc" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.verbosegc" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.verbosegc" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="verbosegc.output.dir" value="${module.verbosegc.basedir}/../../../../out/production/VerboseGC"/>
  <property name="verbosegc.testoutput.dir" value="${module.verbosegc.basedir}/../../../../out/test/VerboseGC"/>
  
  <path id="verbosegc.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="verbosegc.module.production.classpath">
    <path refid="${module.jdk.classpath.verbosegc}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="verbosegc.runtime.production.module.classpath">
    <pathelement location="${verbosegc.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="verbosegc.module.classpath">
    <path refid="${module.jdk.classpath.verbosegc}"/>
    <pathelement location="${verbosegc.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="verbosegc.runtime.module.classpath">
    <pathelement location="${verbosegc.testoutput.dir}"/>
    <pathelement location="${verbosegc.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.verbosegc">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.verbosegc">
    <patternset refid="excluded.from.module.verbosegc"/>
  </patternset>
  
  <path id="verbosegc.module.sourcepath">
    <dirset dir="${module.verbosegc.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.verbosegc" depends="compile.module.verbosegc.production,compile.module.verbosegc.tests" description="Compile module VerboseGC"/>
  
  <target name="compile.module.verbosegc.production" depends="register.custom.compilers" description="Compile module VerboseGC; production classes">
    <mkdir dir="${verbosegc.output.dir}"/>
    <javac2 destdir="${verbosegc.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.verbosegc}/javac">
      <compilerarg line="${compiler.args.verbosegc}"/>
      <bootclasspath refid="verbosegc.module.bootclasspath"/>
      <classpath refid="verbosegc.module.production.classpath"/>
      <src refid="verbosegc.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.verbosegc"/>
    </javac2>
    
    <copy todir="${verbosegc.output.dir}">
      <fileset dir="${module.verbosegc.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.verbosegc.tests" depends="register.custom.compilers,compile.module.verbosegc.production" description="compile module VerboseGC; test classes" unless="skip.tests"/>
  
  <target name="clean.module.verbosegc" description="cleanup module">
    <delete dir="${verbosegc.output.dir}"/>
    <delete dir="${verbosegc.testoutput.dir}"/>
  </target>
</project>