<?xml version="1.0" encoding="UTF-8"?>
<project name="module_codepointim" default="compile.module.codepointim">
  <dirname property="module.codepointim.basedir" file="${ant.file.module_codepointim}"/>
  
  <property name="module.jdk.home.codepointim" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.codepointim" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.codepointim" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.codepointim" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="codepointim.output.dir" value="${module.codepointim.basedir}/../../../../../out/production/CodePointIM"/>
  <property name="codepointim.testoutput.dir" value="${module.codepointim.basedir}/../../../../../out/test/CodePointIM"/>
  
  <path id="codepointim.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="codepointim.module.production.classpath">
    <path refid="${module.jdk.classpath.codepointim}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim.runtime.production.module.classpath">
    <pathelement location="${codepointim.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim.module.classpath">
    <path refid="${module.jdk.classpath.codepointim}"/>
    <pathelement location="${codepointim.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim.runtime.module.classpath">
    <pathelement location="${codepointim.testoutput.dir}"/>
    <pathelement location="${codepointim.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.codepointim">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.codepointim">
    <patternset refid="excluded.from.module.codepointim"/>
  </patternset>
  
  <path id="codepointim.module.sourcepath">
    <dirset dir="${module.codepointim.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.codepointim" depends="compile.module.codepointim.production,compile.module.codepointim.tests" description="Compile module CodePointIM"/>
  
  <target name="compile.module.codepointim.production" depends="register.custom.compilers" description="Compile module CodePointIM; production classes">
    <mkdir dir="${codepointim.output.dir}"/>
    <javac2 destdir="${codepointim.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.codepointim}/javac">
      <compilerarg line="${compiler.args.codepointim}"/>
      <bootclasspath refid="codepointim.module.bootclasspath"/>
      <classpath refid="codepointim.module.production.classpath"/>
      <src refid="codepointim.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.codepointim"/>
    </javac2>
    
    <copy todir="${codepointim.output.dir}">
      <fileset dir="${module.codepointim.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.codepointim.tests" depends="register.custom.compilers,compile.module.codepointim.production" description="compile module CodePointIM; test classes" unless="skip.tests"/>
  
  <target name="clean.module.codepointim" description="cleanup module">
    <delete dir="${codepointim.output.dir}"/>
    <delete dir="${codepointim.testoutput.dir}"/>
  </target>
</project>