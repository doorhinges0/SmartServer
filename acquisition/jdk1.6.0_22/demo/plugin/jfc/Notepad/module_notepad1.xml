<?xml version="1.0" encoding="UTF-8"?>
<project name="module_notepad1" default="compile.module.notepad1">
  <dirname property="module.notepad1.basedir" file="${ant.file.module_notepad1}"/>
  
  <property name="module.jdk.home.notepad1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.notepad1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.notepad1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.notepad1" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="notepad1.output.dir" value="${module.notepad1.basedir}/../../../../../out/production/Notepad1"/>
  <property name="notepad1.testoutput.dir" value="${module.notepad1.basedir}/../../../../../out/test/Notepad1"/>
  
  <path id="notepad1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="notepad1.module.production.classpath">
    <path refid="${module.jdk.classpath.notepad1}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="notepad1.runtime.production.module.classpath">
    <pathelement location="${notepad1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="notepad1.module.classpath">
    <path refid="${module.jdk.classpath.notepad1}"/>
    <pathelement location="${notepad1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="notepad1.runtime.module.classpath">
    <pathelement location="${notepad1.testoutput.dir}"/>
    <pathelement location="${notepad1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.notepad1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.notepad1">
    <patternset refid="excluded.from.module.notepad1"/>
  </patternset>
  
  <path id="notepad1.module.sourcepath">
    <dirset dir="${module.notepad1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.notepad1" depends="compile.module.notepad1.production,compile.module.notepad1.tests" description="Compile module Notepad1"/>
  
  <target name="compile.module.notepad1.production" depends="register.custom.compilers" description="Compile module Notepad1; production classes">
    <mkdir dir="${notepad1.output.dir}"/>
    <javac2 destdir="${notepad1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.notepad1}/javac">
      <compilerarg line="${compiler.args.notepad1}"/>
      <bootclasspath refid="notepad1.module.bootclasspath"/>
      <classpath refid="notepad1.module.production.classpath"/>
      <src refid="notepad1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.notepad1"/>
    </javac2>
    
    <copy todir="${notepad1.output.dir}">
      <fileset dir="${module.notepad1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.notepad1.tests" depends="register.custom.compilers,compile.module.notepad1.production" description="compile module Notepad1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.notepad1" description="cleanup module">
    <delete dir="${notepad1.output.dir}"/>
    <delete dir="${notepad1.testoutput.dir}"/>
  </target>
</project>