<?xml version="1.0" encoding="UTF-8"?>
<project name="module_metalworks1" default="compile.module.metalworks1">
  <dirname property="module.metalworks1.basedir" file="${ant.file.module_metalworks1}"/>
  
  <property name="module.jdk.home.metalworks1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.metalworks1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.metalworks1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.metalworks1" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="metalworks1.output.dir" value="${module.metalworks1.basedir}/../../../../../out/production/Metalworks1"/>
  <property name="metalworks1.testoutput.dir" value="${module.metalworks1.basedir}/../../../../../out/test/Metalworks1"/>
  
  <path id="metalworks1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="metalworks1.module.production.classpath">
    <path refid="${module.jdk.classpath.metalworks1}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks1.runtime.production.module.classpath">
    <pathelement location="${metalworks1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks1.module.classpath">
    <path refid="${module.jdk.classpath.metalworks1}"/>
    <pathelement location="${metalworks1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks1.runtime.module.classpath">
    <pathelement location="${metalworks1.testoutput.dir}"/>
    <pathelement location="${metalworks1.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.metalworks1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.metalworks1">
    <patternset refid="excluded.from.module.metalworks1"/>
  </patternset>
  
  <path id="metalworks1.module.sourcepath">
    <dirset dir="${module.metalworks1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.metalworks1" depends="compile.module.metalworks1.production,compile.module.metalworks1.tests" description="Compile module Metalworks1"/>
  
  <target name="compile.module.metalworks1.production" depends="register.custom.compilers" description="Compile module Metalworks1; production classes">
    <mkdir dir="${metalworks1.output.dir}"/>
    <javac2 destdir="${metalworks1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.metalworks1}/javac">
      <compilerarg line="${compiler.args.metalworks1}"/>
      <bootclasspath refid="metalworks1.module.bootclasspath"/>
      <classpath refid="metalworks1.module.production.classpath"/>
      <src refid="metalworks1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.metalworks1"/>
    </javac2>
    
    <copy todir="${metalworks1.output.dir}">
      <fileset dir="${module.metalworks1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.metalworks1.tests" depends="register.custom.compilers,compile.module.metalworks1.production" description="compile module Metalworks1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.metalworks1" description="cleanup module">
    <delete dir="${metalworks1.output.dir}"/>
    <delete dir="${metalworks1.testoutput.dir}"/>
  </target>
</project>