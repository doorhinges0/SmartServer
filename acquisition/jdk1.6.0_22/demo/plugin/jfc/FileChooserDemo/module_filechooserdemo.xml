<?xml version="1.0" encoding="UTF-8"?>
<project name="module_filechooserdemo" default="compile.module.filechooserdemo">
  <dirname property="module.filechooserdemo.basedir" file="${ant.file.module_filechooserdemo}"/>
  
  <property name="module.jdk.home.filechooserdemo" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.filechooserdemo" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.filechooserdemo" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.filechooserdemo" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="filechooserdemo.output.dir" value="${module.filechooserdemo.basedir}/../../../../../out/production/FileChooserDemo"/>
  <property name="filechooserdemo.testoutput.dir" value="${module.filechooserdemo.basedir}/../../../../../out/test/FileChooserDemo"/>
  
  <path id="filechooserdemo.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="filechooserdemo.module.production.classpath">
    <path refid="${module.jdk.classpath.filechooserdemo}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="filechooserdemo.runtime.production.module.classpath">
    <pathelement location="${filechooserdemo.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="filechooserdemo.module.classpath">
    <path refid="${module.jdk.classpath.filechooserdemo}"/>
    <pathelement location="${filechooserdemo.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="filechooserdemo.runtime.module.classpath">
    <pathelement location="${filechooserdemo.testoutput.dir}"/>
    <pathelement location="${filechooserdemo.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.filechooserdemo">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.filechooserdemo">
    <patternset refid="excluded.from.module.filechooserdemo"/>
  </patternset>
  
  <path id="filechooserdemo.module.sourcepath">
    <dirset dir="${module.filechooserdemo.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.filechooserdemo" depends="compile.module.filechooserdemo.production,compile.module.filechooserdemo.tests" description="Compile module FileChooserDemo"/>
  
  <target name="compile.module.filechooserdemo.production" depends="register.custom.compilers" description="Compile module FileChooserDemo; production classes">
    <mkdir dir="${filechooserdemo.output.dir}"/>
    <javac2 destdir="${filechooserdemo.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.filechooserdemo}/javac">
      <compilerarg line="${compiler.args.filechooserdemo}"/>
      <bootclasspath refid="filechooserdemo.module.bootclasspath"/>
      <classpath refid="filechooserdemo.module.production.classpath"/>
      <src refid="filechooserdemo.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.filechooserdemo"/>
    </javac2>
    
    <copy todir="${filechooserdemo.output.dir}">
      <fileset dir="${module.filechooserdemo.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.filechooserdemo.tests" depends="register.custom.compilers,compile.module.filechooserdemo.production" description="compile module FileChooserDemo; test classes" unless="skip.tests"/>
  
  <target name="clean.module.filechooserdemo" description="cleanup module">
    <delete dir="${filechooserdemo.output.dir}"/>
    <delete dir="${filechooserdemo.testoutput.dir}"/>
  </target>
</project>