<?xml version="1.0" encoding="UTF-8"?>
<project name="module_swingset21" default="compile.module.swingset21">
  <dirname property="module.swingset21.basedir" file="${ant.file.module_swingset21}"/>
  
  <property name="module.jdk.home.swingset21" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.swingset21" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.swingset21" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.swingset21" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="swingset21.output.dir" value="${module.swingset21.basedir}/../../../../out/production/SwingSet21"/>
  <property name="swingset21.testoutput.dir" value="${module.swingset21.basedir}/../../../../out/test/SwingSet21"/>
  
  <path id="swingset21.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="swingset21.module.production.classpath">
    <path refid="${module.jdk.classpath.swingset21}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingset21.runtime.production.module.classpath">
    <pathelement location="${swingset21.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingset21.module.classpath">
    <path refid="${module.jdk.classpath.swingset21}"/>
    <pathelement location="${swingset21.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingset21.runtime.module.classpath">
    <pathelement location="${swingset21.testoutput.dir}"/>
    <pathelement location="${swingset21.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.swingset21">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.swingset21">
    <patternset refid="excluded.from.module.swingset21"/>
  </patternset>
  
  <path id="swingset21.module.sourcepath">
    <dirset dir="${module.swingset21.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.swingset21" depends="compile.module.swingset21.production,compile.module.swingset21.tests" description="Compile module SwingSet21"/>
  
  <target name="compile.module.swingset21.production" depends="register.custom.compilers" description="Compile module SwingSet21; production classes">
    <mkdir dir="${swingset21.output.dir}"/>
    <javac2 destdir="${swingset21.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.swingset21}/javac">
      <compilerarg line="${compiler.args.swingset21}"/>
      <bootclasspath refid="swingset21.module.bootclasspath"/>
      <classpath refid="swingset21.module.production.classpath"/>
      <src refid="swingset21.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.swingset21"/>
    </javac2>
    
    <copy todir="${swingset21.output.dir}">
      <fileset dir="${module.swingset21.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.swingset21.tests" depends="register.custom.compilers,compile.module.swingset21.production" description="compile module SwingSet21; test classes" unless="skip.tests"/>
  
  <target name="clean.module.swingset21" description="cleanup module">
    <delete dir="${swingset21.output.dir}"/>
    <delete dir="${swingset21.testoutput.dir}"/>
  </target>
</project>