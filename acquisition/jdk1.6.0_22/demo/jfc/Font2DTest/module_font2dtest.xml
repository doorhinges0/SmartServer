<?xml version="1.0" encoding="UTF-8"?>
<project name="module_font2dtest" default="compile.module.font2dtest">
  <dirname property="module.font2dtest.basedir" file="${ant.file.module_font2dtest}"/>
  
  <property name="module.jdk.home.font2dtest" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.font2dtest" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.font2dtest" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.font2dtest" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="font2dtest.output.dir" value="${module.font2dtest.basedir}/../../../../out/production/Font2DTest"/>
  <property name="font2dtest.testoutput.dir" value="${module.font2dtest.basedir}/../../../../out/test/Font2DTest"/>
  
  <path id="font2dtest.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="font2dtest.module.production.classpath">
    <path refid="${module.jdk.classpath.font2dtest}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="font2dtest.runtime.production.module.classpath">
    <pathelement location="${font2dtest.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="font2dtest.module.classpath">
    <path refid="${module.jdk.classpath.font2dtest}"/>
    <pathelement location="${font2dtest.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="font2dtest.runtime.module.classpath">
    <pathelement location="${font2dtest.testoutput.dir}"/>
    <pathelement location="${font2dtest.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.font2dtest">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.font2dtest">
    <patternset refid="excluded.from.module.font2dtest"/>
  </patternset>
  
  <path id="font2dtest.module.sourcepath">
    <dirset dir="${module.font2dtest.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.font2dtest" depends="compile.module.font2dtest.production,compile.module.font2dtest.tests" description="Compile module Font2DTest"/>
  
  <target name="compile.module.font2dtest.production" depends="register.custom.compilers" description="Compile module Font2DTest; production classes">
    <mkdir dir="${font2dtest.output.dir}"/>
    <javac2 destdir="${font2dtest.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.font2dtest}/javac">
      <compilerarg line="${compiler.args.font2dtest}"/>
      <bootclasspath refid="font2dtest.module.bootclasspath"/>
      <classpath refid="font2dtest.module.production.classpath"/>
      <src refid="font2dtest.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.font2dtest"/>
    </javac2>
    
    <copy todir="${font2dtest.output.dir}">
      <fileset dir="${module.font2dtest.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.font2dtest.tests" depends="register.custom.compilers,compile.module.font2dtest.production" description="compile module Font2DTest; test classes" unless="skip.tests"/>
  
  <target name="clean.module.font2dtest" description="cleanup module">
    <delete dir="${font2dtest.output.dir}"/>
    <delete dir="${font2dtest.testoutput.dir}"/>
  </target>
</project>