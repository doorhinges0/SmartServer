<?xml version="1.0" encoding="UTF-8"?>
<project name="module_java2d" default="compile.module.java2d">
  <dirname property="module.java2d.basedir" file="${ant.file.module_java2d}"/>
  
  <property name="module.jdk.home.java2d" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java2d" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java2d" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java2d" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="java2d.output.dir" value="${module.java2d.basedir}/../../../../out/production/Java2D"/>
  <property name="java2d.testoutput.dir" value="${module.java2d.basedir}/../../../../out/test/Java2D"/>
  
  <path id="java2d.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java2d.module.production.classpath">
    <path refid="${module.jdk.classpath.java2d}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="java2d.runtime.production.module.classpath">
    <pathelement location="${java2d.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="java2d.module.classpath">
    <path refid="${module.jdk.classpath.java2d}"/>
    <pathelement location="${java2d.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="java2d.runtime.module.classpath">
    <pathelement location="${java2d.testoutput.dir}"/>
    <pathelement location="${java2d.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.java2d">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java2d">
    <patternset refid="excluded.from.module.java2d"/>
  </patternset>
  
  <path id="java2d.module.sourcepath">
    <dirset dir="${module.java2d.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java2d" depends="compile.module.java2d.production,compile.module.java2d.tests" description="Compile module Java2D"/>
  
  <target name="compile.module.java2d.production" depends="register.custom.compilers" description="Compile module Java2D; production classes">
    <mkdir dir="${java2d.output.dir}"/>
    <javac2 destdir="${java2d.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java2d}/javac">
      <compilerarg line="${compiler.args.java2d}"/>
      <bootclasspath refid="java2d.module.bootclasspath"/>
      <classpath refid="java2d.module.production.classpath"/>
      <src refid="java2d.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java2d"/>
    </javac2>
    
    <copy todir="${java2d.output.dir}">
      <fileset dir="${module.java2d.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java2d.tests" depends="register.custom.compilers,compile.module.java2d.production" description="compile module Java2D; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java2d" description="cleanup module">
    <delete dir="${java2d.output.dir}"/>
    <delete dir="${java2d.testoutput.dir}"/>
  </target>
</project>