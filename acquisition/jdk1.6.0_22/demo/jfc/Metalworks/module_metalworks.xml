<?xml version="1.0" encoding="UTF-8"?>
<project name="module_metalworks" default="compile.module.metalworks">
  <dirname property="module.metalworks.basedir" file="${ant.file.module_metalworks}"/>
  
  <property name="module.jdk.home.metalworks" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.metalworks" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.metalworks" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.metalworks" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="metalworks.output.dir" value="${module.metalworks.basedir}/../../../../out/production/Metalworks"/>
  <property name="metalworks.testoutput.dir" value="${module.metalworks.basedir}/../../../../out/test/Metalworks"/>
  
  <path id="metalworks.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="metalworks.module.production.classpath">
    <path refid="${module.jdk.classpath.metalworks}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks.runtime.production.module.classpath">
    <pathelement location="${metalworks.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks.module.classpath">
    <path refid="${module.jdk.classpath.metalworks}"/>
    <pathelement location="${metalworks.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="metalworks.runtime.module.classpath">
    <pathelement location="${metalworks.testoutput.dir}"/>
    <pathelement location="${metalworks.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.metalworks">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.metalworks">
    <patternset refid="excluded.from.module.metalworks"/>
  </patternset>
  
  <path id="metalworks.module.sourcepath">
    <dirset dir="${module.metalworks.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.metalworks" depends="compile.module.metalworks.production,compile.module.metalworks.tests" description="Compile module Metalworks"/>
  
  <target name="compile.module.metalworks.production" depends="register.custom.compilers" description="Compile module Metalworks; production classes">
    <mkdir dir="${metalworks.output.dir}"/>
    <javac2 destdir="${metalworks.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.metalworks}/javac">
      <compilerarg line="${compiler.args.metalworks}"/>
      <bootclasspath refid="metalworks.module.bootclasspath"/>
      <classpath refid="metalworks.module.production.classpath"/>
      <src refid="metalworks.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.metalworks"/>
    </javac2>
    
    <copy todir="${metalworks.output.dir}">
      <fileset dir="${module.metalworks.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.metalworks.tests" depends="register.custom.compilers,compile.module.metalworks.production" description="compile module Metalworks; test classes" unless="skip.tests"/>
  
  <target name="clean.module.metalworks" description="cleanup module">
    <delete dir="${metalworks.output.dir}"/>
    <delete dir="${metalworks.testoutput.dir}"/>
  </target>
</project>