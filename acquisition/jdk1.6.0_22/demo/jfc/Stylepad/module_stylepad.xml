<?xml version="1.0" encoding="UTF-8"?>
<project name="module_stylepad" default="compile.module.stylepad">
  <dirname property="module.stylepad.basedir" file="${ant.file.module_stylepad}"/>
  
  <property name="module.jdk.home.stylepad" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.stylepad" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.stylepad" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.stylepad" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="stylepad.output.dir" value="${module.stylepad.basedir}/../../../../out/production/Stylepad"/>
  <property name="stylepad.testoutput.dir" value="${module.stylepad.basedir}/../../../../out/test/Stylepad"/>
  
  <path id="stylepad.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="stylepad.module.production.classpath">
    <path refid="${module.jdk.classpath.stylepad}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="stylepad.runtime.production.module.classpath">
    <pathelement location="${stylepad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="stylepad.module.classpath">
    <path refid="${module.jdk.classpath.stylepad}"/>
    <pathelement location="${stylepad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="stylepad.runtime.module.classpath">
    <pathelement location="${stylepad.testoutput.dir}"/>
    <pathelement location="${stylepad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.stylepad">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.stylepad">
    <patternset refid="excluded.from.module.stylepad"/>
  </patternset>
  
  <path id="stylepad.module.sourcepath">
    <dirset dir="${module.stylepad.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.stylepad" depends="compile.module.stylepad.production,compile.module.stylepad.tests" description="Compile module Stylepad"/>
  
  <target name="compile.module.stylepad.production" depends="register.custom.compilers" description="Compile module Stylepad; production classes">
    <mkdir dir="${stylepad.output.dir}"/>
    <javac2 destdir="${stylepad.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.stylepad}/javac">
      <compilerarg line="${compiler.args.stylepad}"/>
      <bootclasspath refid="stylepad.module.bootclasspath"/>
      <classpath refid="stylepad.module.production.classpath"/>
      <src refid="stylepad.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.stylepad"/>
    </javac2>
    
    <copy todir="${stylepad.output.dir}">
      <fileset dir="${module.stylepad.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.stylepad.tests" depends="register.custom.compilers,compile.module.stylepad.production" description="compile module Stylepad; test classes" unless="skip.tests"/>
  
  <target name="clean.module.stylepad" description="cleanup module">
    <delete dir="${stylepad.output.dir}"/>
    <delete dir="${stylepad.testoutput.dir}"/>
  </target>
</project>