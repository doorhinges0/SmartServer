<?xml version="1.0" encoding="UTF-8"?>
<project name="module_codepointim1" default="compile.module.codepointim1">
  <dirname property="module.codepointim1.basedir" file="${ant.file.module_codepointim1}"/>
  
  <property name="module.jdk.home.codepointim1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.codepointim1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.codepointim1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.codepointim1" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="codepointim1.output.dir" value="${module.codepointim1.basedir}/../../../../out/production/CodePointIM1"/>
  <property name="codepointim1.testoutput.dir" value="${module.codepointim1.basedir}/../../../../out/test/CodePointIM1"/>
  
  <path id="codepointim1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="codepointim1.module.production.classpath">
    <path refid="${module.jdk.classpath.codepointim1}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim1.runtime.production.module.classpath">
    <pathelement location="${codepointim1.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim1.module.classpath">
    <path refid="${module.jdk.classpath.codepointim1}"/>
    <pathelement location="${codepointim1.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="codepointim1.runtime.module.classpath">
    <pathelement location="${codepointim1.testoutput.dir}"/>
    <pathelement location="${codepointim1.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.codepointim1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.codepointim1">
    <patternset refid="excluded.from.module.codepointim1"/>
  </patternset>
  
  <path id="codepointim1.module.sourcepath">
    <dirset dir="${module.codepointim1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.codepointim1" depends="compile.module.codepointim1.production,compile.module.codepointim1.tests" description="Compile module CodePointIM1"/>
  
  <target name="compile.module.codepointim1.production" depends="register.custom.compilers" description="Compile module CodePointIM1; production classes">
    <mkdir dir="${codepointim1.output.dir}"/>
    <javac2 destdir="${codepointim1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.codepointim1}/javac">
      <compilerarg line="${compiler.args.codepointim1}"/>
      <bootclasspath refid="codepointim1.module.bootclasspath"/>
      <classpath refid="codepointim1.module.production.classpath"/>
      <src refid="codepointim1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.codepointim1"/>
    </javac2>
    
    <copy todir="${codepointim1.output.dir}">
      <fileset dir="${module.codepointim1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.codepointim1.tests" depends="register.custom.compilers,compile.module.codepointim1.production" description="compile module CodePointIM1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.codepointim1" description="cleanup module">
    <delete dir="${codepointim1.output.dir}"/>
    <delete dir="${codepointim1.testoutput.dir}"/>
  </target>
</project>