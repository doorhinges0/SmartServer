<?xml version="1.0" encoding="UTF-8"?>
<project name="module_swingapplet" default="compile.module.swingapplet">
  <dirname property="module.swingapplet.basedir" file="${ant.file.module_swingapplet}"/>
  
  <property name="module.jdk.home.swingapplet" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.swingapplet" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.swingapplet" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.swingapplet" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="swingapplet.output.dir" value="${module.swingapplet.basedir}/../../../../out/production/SwingApplet"/>
  <property name="swingapplet.testoutput.dir" value="${module.swingapplet.basedir}/../../../../out/test/SwingApplet"/>
  
  <path id="swingapplet.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="swingapplet.module.production.classpath">
    <path refid="${module.jdk.classpath.swingapplet}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingapplet.runtime.production.module.classpath">
    <pathelement location="${swingapplet.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingapplet.module.classpath">
    <path refid="${module.jdk.classpath.swingapplet}"/>
    <pathelement location="${swingapplet.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="swingapplet.runtime.module.classpath">
    <pathelement location="${swingapplet.testoutput.dir}"/>
    <pathelement location="${swingapplet.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.swingapplet">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.swingapplet">
    <patternset refid="excluded.from.module.swingapplet"/>
  </patternset>
  
  <path id="swingapplet.module.sourcepath">
    <dirset dir="${module.swingapplet.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.swingapplet" depends="compile.module.swingapplet.production,compile.module.swingapplet.tests" description="Compile module SwingApplet"/>
  
  <target name="compile.module.swingapplet.production" depends="register.custom.compilers" description="Compile module SwingApplet; production classes">
    <mkdir dir="${swingapplet.output.dir}"/>
    <javac2 destdir="${swingapplet.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.swingapplet}/javac">
      <compilerarg line="${compiler.args.swingapplet}"/>
      <bootclasspath refid="swingapplet.module.bootclasspath"/>
      <classpath refid="swingapplet.module.production.classpath"/>
      <src refid="swingapplet.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.swingapplet"/>
    </javac2>
    
    <copy todir="${swingapplet.output.dir}">
      <fileset dir="${module.swingapplet.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.swingapplet.tests" depends="register.custom.compilers,compile.module.swingapplet.production" description="compile module SwingApplet; test classes" unless="skip.tests"/>
  
  <target name="clean.module.swingapplet" description="cleanup module">
    <delete dir="${swingapplet.output.dir}"/>
    <delete dir="${swingapplet.testoutput.dir}"/>
  </target>
</project>