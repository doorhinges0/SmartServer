<?xml version="1.0" encoding="UTF-8"?>
<project name="module_heaptracker" default="compile.module.heaptracker">
  <dirname property="module.heaptracker.basedir" file="${ant.file.module_heaptracker}"/>
  
  <property name="module.jdk.home.heaptracker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.heaptracker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.heaptracker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.heaptracker" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="heaptracker.output.dir" value="${module.heaptracker.basedir}/../../../../out/production/heapTracker"/>
  <property name="heaptracker.testoutput.dir" value="${module.heaptracker.basedir}/../../../../out/test/heapTracker"/>
  
  <path id="heaptracker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="heaptracker.module.production.classpath">
    <path refid="${module.jdk.classpath.heaptracker}"/>
  </path>
  
  <path id="heaptracker.runtime.production.module.classpath">
    <pathelement location="${heaptracker.output.dir}"/>
  </path>
  
  <path id="heaptracker.module.classpath">
    <path refid="${module.jdk.classpath.heaptracker}"/>
    <pathelement location="${heaptracker.output.dir}"/>
  </path>
  
  <path id="heaptracker.runtime.module.classpath">
    <pathelement location="${heaptracker.testoutput.dir}"/>
    <pathelement location="${heaptracker.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.heaptracker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.heaptracker">
    <patternset refid="excluded.from.module.heaptracker"/>
  </patternset>
  
  <path id="heaptracker.module.sourcepath">
    <dirset dir="${module.heaptracker.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.heaptracker" depends="compile.module.heaptracker.production,compile.module.heaptracker.tests" description="Compile module heapTracker"/>
  
  <target name="compile.module.heaptracker.production" depends="register.custom.compilers" description="Compile module heapTracker; production classes">
    <mkdir dir="${heaptracker.output.dir}"/>
    <javac2 destdir="${heaptracker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.heaptracker}/javac">
      <compilerarg line="${compiler.args.heaptracker}"/>
      <bootclasspath refid="heaptracker.module.bootclasspath"/>
      <classpath refid="heaptracker.module.production.classpath"/>
      <src refid="heaptracker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.heaptracker"/>
    </javac2>
    
    <copy todir="${heaptracker.output.dir}">
      <fileset dir="${module.heaptracker.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.heaptracker.tests" depends="register.custom.compilers,compile.module.heaptracker.production" description="compile module heapTracker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.heaptracker" description="cleanup module">
    <delete dir="${heaptracker.output.dir}"/>
    <delete dir="${heaptracker.testoutput.dir}"/>
  </target>
</project>