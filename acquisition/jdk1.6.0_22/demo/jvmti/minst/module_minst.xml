<?xml version="1.0" encoding="UTF-8"?>
<project name="module_minst" default="compile.module.minst">
  <dirname property="module.minst.basedir" file="${ant.file.module_minst}"/>
  
  <property name="module.jdk.home.minst" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.minst" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.minst" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.minst" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="minst.output.dir" value="${module.minst.basedir}/../../../../out/production/minst"/>
  <property name="minst.testoutput.dir" value="${module.minst.basedir}/../../../../out/test/minst"/>
  
  <path id="minst.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="minst.module.production.classpath">
    <path refid="${module.jdk.classpath.minst}"/>
  </path>
  
  <path id="minst.runtime.production.module.classpath">
    <pathelement location="${minst.output.dir}"/>
  </path>
  
  <path id="minst.module.classpath">
    <path refid="${module.jdk.classpath.minst}"/>
    <pathelement location="${minst.output.dir}"/>
  </path>
  
  <path id="minst.runtime.module.classpath">
    <pathelement location="${minst.testoutput.dir}"/>
    <pathelement location="${minst.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.minst">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.minst">
    <patternset refid="excluded.from.module.minst"/>
  </patternset>
  
  <path id="minst.module.sourcepath">
    <dirset dir="${module.minst.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.minst" depends="compile.module.minst.production,compile.module.minst.tests" description="Compile module minst"/>
  
  <target name="compile.module.minst.production" depends="register.custom.compilers" description="Compile module minst; production classes">
    <mkdir dir="${minst.output.dir}"/>
    <javac2 destdir="${minst.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.minst}/javac">
      <compilerarg line="${compiler.args.minst}"/>
      <bootclasspath refid="minst.module.bootclasspath"/>
      <classpath refid="minst.module.production.classpath"/>
      <src refid="minst.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.minst"/>
    </javac2>
    
    <copy todir="${minst.output.dir}">
      <fileset dir="${module.minst.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.minst.tests" depends="register.custom.compilers,compile.module.minst.production" description="compile module minst; test classes" unless="skip.tests"/>
  
  <target name="clean.module.minst" description="cleanup module">
    <delete dir="${minst.output.dir}"/>
    <delete dir="${minst.testoutput.dir}"/>
  </target>
</project>