<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jconsole-plugin" default="compile.module.jconsole-plugin">
  <dirname property="module.jconsole-plugin.basedir" file="${ant.file.module_jconsole-plugin}"/>
  
  <property name="module.jdk.home.jconsole-plugin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jconsole-plugin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jconsole-plugin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jconsole-plugin" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="jconsole-plugin.output.dir" value="${module.jconsole-plugin.basedir}/../../../../out/production/jconsole-plugin"/>
  <property name="jconsole-plugin.testoutput.dir" value="${module.jconsole-plugin.basedir}/../../../../out/test/jconsole-plugin"/>
  
  <path id="jconsole-plugin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jconsole-plugin.module.production.classpath">
    <path refid="${module.jdk.classpath.jconsole-plugin}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jconsole-plugin.runtime.production.module.classpath">
    <pathelement location="${jconsole-plugin.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jconsole-plugin.module.classpath">
    <path refid="${module.jdk.classpath.jconsole-plugin}"/>
    <pathelement location="${jconsole-plugin.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="jconsole-plugin.runtime.module.classpath">
    <pathelement location="${jconsole-plugin.testoutput.dir}"/>
    <pathelement location="${jconsole-plugin.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jconsole-plugin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jconsole-plugin">
    <patternset refid="excluded.from.module.jconsole-plugin"/>
  </patternset>
  
  <path id="jconsole-plugin.module.sourcepath">
    <dirset dir="${module.jconsole-plugin.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jconsole-plugin" depends="compile.module.jconsole-plugin.production,compile.module.jconsole-plugin.tests" description="Compile module jconsole-plugin"/>
  
  <target name="compile.module.jconsole-plugin.production" depends="register.custom.compilers" description="Compile module jconsole-plugin; production classes">
    <mkdir dir="${jconsole-plugin.output.dir}"/>
    <javac2 destdir="${jconsole-plugin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jconsole-plugin}/javac">
      <compilerarg line="${compiler.args.jconsole-plugin}"/>
      <bootclasspath refid="jconsole-plugin.module.bootclasspath"/>
      <classpath refid="jconsole-plugin.module.production.classpath"/>
      <src refid="jconsole-plugin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jconsole-plugin"/>
    </javac2>
    
    <copy todir="${jconsole-plugin.output.dir}">
      <fileset dir="${module.jconsole-plugin.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jconsole-plugin.tests" depends="register.custom.compilers,compile.module.jconsole-plugin.production" description="compile module jconsole-plugin; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jconsole-plugin" description="cleanup module">
    <delete dir="${jconsole-plugin.output.dir}"/>
    <delete dir="${jconsole-plugin.testoutput.dir}"/>
  </target>
</project>