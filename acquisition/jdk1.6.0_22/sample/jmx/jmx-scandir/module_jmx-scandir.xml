<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jmx-scandir" default="compile.module.jmx-scandir">
  <dirname property="module.jmx-scandir.basedir" file="${ant.file.module_jmx-scandir}"/>
  
  <property name="module.jdk.home.jmx-scandir" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jmx-scandir" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jmx-scandir" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jmx-scandir" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="jmx-scandir.output.dir" value="${module.jmx-scandir.basedir}/../../../../out/production/jmx-scandir"/>
  <property name="jmx-scandir.testoutput.dir" value="${module.jmx-scandir.basedir}/../../../../out/test/jmx-scandir"/>
  
  <path id="jmx-scandir.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jmx-scandir.module.production.classpath">
    <path refid="${module.jdk.classpath.jmx-scandir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="jmx-scandir.runtime.production.module.classpath">
    <pathelement location="${jmx-scandir.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="jmx-scandir.module.classpath">
    <path refid="${module.jdk.classpath.jmx-scandir}"/>
    <pathelement location="${jmx-scandir.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="jmx-scandir.runtime.module.classpath">
    <pathelement location="${jmx-scandir.testoutput.dir}"/>
    <pathelement location="${jmx-scandir.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jmx-scandir">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jmx-scandir">
    <patternset refid="excluded.from.module.jmx-scandir"/>
  </patternset>
  
  <path id="jmx-scandir.module.sourcepath">
    <dirset dir="${module.jmx-scandir.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="jmx-scandir.module.test.sourcepath">
    <dirset dir="${module.jmx-scandir.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jmx-scandir" depends="compile.module.jmx-scandir.production,compile.module.jmx-scandir.tests" description="Compile module jmx-scandir"/>
  
  <target name="compile.module.jmx-scandir.production" depends="register.custom.compilers" description="Compile module jmx-scandir; production classes">
    <mkdir dir="${jmx-scandir.output.dir}"/>
    <javac2 destdir="${jmx-scandir.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jmx-scandir}/javac">
      <compilerarg line="${compiler.args.jmx-scandir}"/>
      <bootclasspath refid="jmx-scandir.module.bootclasspath"/>
      <classpath refid="jmx-scandir.module.production.classpath"/>
      <src refid="jmx-scandir.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jmx-scandir"/>
    </javac2>
    
    <copy todir="${jmx-scandir.output.dir}">
      <fileset dir="${module.jmx-scandir.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jmx-scandir.tests" depends="register.custom.compilers,compile.module.jmx-scandir.production" description="compile module jmx-scandir; test classes" unless="skip.tests">
    <mkdir dir="${jmx-scandir.testoutput.dir}"/>
    <javac2 destdir="${jmx-scandir.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jmx-scandir}/javac">
      <compilerarg line="${compiler.args.jmx-scandir}"/>
      <bootclasspath refid="jmx-scandir.module.bootclasspath"/>
      <classpath refid="jmx-scandir.module.classpath"/>
      <src refid="jmx-scandir.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.jmx-scandir"/>
    </javac2>
    
    <copy todir="${jmx-scandir.testoutput.dir}">
      <fileset dir="${module.jmx-scandir.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.jmx-scandir" description="cleanup module">
    <delete dir="${jmx-scandir.output.dir}"/>
    <delete dir="${jmx-scandir.testoutput.dir}"/>
  </target>
</project>