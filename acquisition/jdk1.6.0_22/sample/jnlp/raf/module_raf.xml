<?xml version="1.0" encoding="UTF-8"?>
<project name="module_raf" default="compile.module.raf">
  <dirname property="module.raf.basedir" file="${ant.file.module_raf}"/>
  
  <property name="module.jdk.home.raf" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.raf" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.raf" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.raf" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="raf.output.dir" value="${module.raf.basedir}/../../../../out/production/raf"/>
  <property name="raf.testoutput.dir" value="${module.raf.basedir}/../../../../out/test/raf"/>
  
  <path id="raf.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="raf.module.production.classpath">
    <path refid="${module.jdk.classpath.raf}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="raf.runtime.production.module.classpath">
    <pathelement location="${raf.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="raf.module.classpath">
    <path refid="${module.jdk.classpath.raf}"/>
    <pathelement location="${raf.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="raf.runtime.module.classpath">
    <pathelement location="${raf.testoutput.dir}"/>
    <pathelement location="${raf.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.raf">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.raf">
    <patternset refid="excluded.from.module.raf"/>
  </patternset>
  
  <path id="raf.module.sourcepath">
    <dirset dir="${module.raf.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.raf" depends="compile.module.raf.production,compile.module.raf.tests" description="Compile module raf"/>
  
  <target name="compile.module.raf.production" depends="register.custom.compilers" description="Compile module raf; production classes">
    <mkdir dir="${raf.output.dir}"/>
    <javac2 destdir="${raf.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.raf}/javac">
      <compilerarg line="${compiler.args.raf}"/>
      <bootclasspath refid="raf.module.bootclasspath"/>
      <classpath refid="raf.module.production.classpath"/>
      <src refid="raf.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.raf"/>
    </javac2>
    
    <copy todir="${raf.output.dir}">
      <fileset dir="${module.raf.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.raf.tests" depends="register.custom.compilers,compile.module.raf.production" description="compile module raf; test classes" unless="skip.tests"/>
  
  <target name="clean.module.raf" description="cleanup module">
    <delete dir="${raf.output.dir}"/>
    <delete dir="${raf.testoutput.dir}"/>
  </target>
</project>