<?xml version="1.0" encoding="UTF-8"?>
<project name="module_share" default="compile.module.share">
  <dirname property="module.share.basedir" file="${ant.file.module_share}"/>
  
  <property name="module.jdk.home.share" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.share" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.share" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.share" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="share.output.dir" value="${module.share.basedir}/../../../../../../out/production/share"/>
  <property name="share.testoutput.dir" value="${module.share.basedir}/../../../../../../out/test/share"/>
  
  <path id="share.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="share.module.production.classpath">
    <path refid="${module.jdk.classpath.share}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="share.runtime.production.module.classpath">
    <pathelement location="${share.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="share.module.classpath">
    <path refid="${module.jdk.classpath.share}"/>
    <pathelement location="${share.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="share.runtime.module.classpath">
    <pathelement location="${share.testoutput.dir}"/>
    <pathelement location="${share.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.share">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.share">
    <patternset refid="excluded.from.module.share"/>
  </patternset>
  
  <path id="share.module.sourcepath">
    <dirset dir="${module.share.basedir}">
      <include name="classes"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.share" depends="compile.module.share.production,compile.module.share.tests" description="Compile module share"/>
  
  <target name="compile.module.share.production" depends="register.custom.compilers" description="Compile module share; production classes">
    <mkdir dir="${share.output.dir}"/>
    <javac2 destdir="${share.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.share}/javac">
      <compilerarg line="${compiler.args.share}"/>
      <bootclasspath refid="share.module.bootclasspath"/>
      <classpath refid="share.module.production.classpath"/>
      <src refid="share.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.share"/>
    </javac2>
    
    <copy todir="${share.output.dir}">
      <fileset dir="${module.share.basedir}/classes">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.share.tests" depends="register.custom.compilers,compile.module.share.production" description="compile module share; test classes" unless="skip.tests"/>
  
  <target name="clean.module.share" description="cleanup module">
    <delete dir="${share.output.dir}"/>
    <delete dir="${share.testoutput.dir}"/>
  </target>
</project>