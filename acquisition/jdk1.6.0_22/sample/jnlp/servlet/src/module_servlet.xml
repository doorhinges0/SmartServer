<?xml version="1.0" encoding="UTF-8"?>
<project name="module_servlet" default="compile.module.servlet">
  <dirname property="module.servlet.basedir" file="${ant.file.module_servlet}"/>
  
  <property name="module.jdk.home.servlet" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.servlet" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.servlet" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.servlet" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="servlet.output.dir" value="${module.servlet.basedir}/../../../../../out/production/servlet"/>
  <property name="servlet.testoutput.dir" value="${module.servlet.basedir}/../../../../../out/test/servlet"/>
  
  <path id="servlet.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="servlet.module.production.classpath">
    <path refid="${module.jdk.classpath.servlet}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="servlet.runtime.production.module.classpath">
    <pathelement location="${servlet.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="servlet.module.classpath">
    <path refid="${module.jdk.classpath.servlet}"/>
    <pathelement location="${servlet.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  <path id="servlet.runtime.module.classpath">
    <pathelement location="${servlet.testoutput.dir}"/>
    <pathelement location="${servlet.output.dir}"/>
    <path refid="library.lib3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.servlet">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.servlet">
    <patternset refid="excluded.from.module.servlet"/>
  </patternset>
  
  <path id="servlet.module.sourcepath">
    <dirset dir="${module.servlet.basedir}">
      <include name="classes"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.servlet" depends="compile.module.servlet.production,compile.module.servlet.tests" description="Compile module servlet"/>
  
  <target name="compile.module.servlet.production" depends="register.custom.compilers" description="Compile module servlet; production classes">
    <mkdir dir="${servlet.output.dir}"/>
    <javac2 destdir="${servlet.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.servlet}/javac">
      <compilerarg line="${compiler.args.servlet}"/>
      <bootclasspath refid="servlet.module.bootclasspath"/>
      <classpath refid="servlet.module.production.classpath"/>
      <src refid="servlet.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.servlet"/>
    </javac2>
    
    <copy todir="${servlet.output.dir}">
      <fileset dir="${module.servlet.basedir}/classes">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.servlet.tests" depends="register.custom.compilers,compile.module.servlet.production" description="compile module servlet; test classes" unless="skip.tests"/>
  
  <target name="clean.module.servlet" description="cleanup module">
    <delete dir="${servlet.output.dir}"/>
    <delete dir="${servlet.testoutput.dir}"/>
  </target>
</project>