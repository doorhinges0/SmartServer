<?xml version="1.0" encoding="UTF-8"?>
<project name="module_webpad" default="compile.module.webpad">
  <dirname property="module.webpad.basedir" file="${ant.file.module_webpad}"/>
  
  <property name="module.jdk.home.webpad" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.webpad" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.webpad" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.webpad" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="webpad.output.dir" value="${module.webpad.basedir}/../../../../../out/production/webpad"/>
  <property name="webpad.testoutput.dir" value="${module.webpad.basedir}/../../../../../out/test/webpad"/>
  
  <path id="webpad.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="webpad.module.production.classpath">
    <path refid="${module.jdk.classpath.webpad}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.ext1.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="webpad.runtime.production.module.classpath">
    <pathelement location="${webpad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.ext1.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="webpad.module.classpath">
    <path refid="${module.jdk.classpath.webpad}"/>
    <pathelement location="${webpad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.ext1.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  <path id="webpad.runtime.module.classpath">
    <pathelement location="${webpad.testoutput.dir}"/>
    <pathelement location="${webpad.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.ext1.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
    <path refid="library.servlet.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.webpad">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.webpad">
    <patternset refid="excluded.from.module.webpad"/>
  </patternset>
  
  <path id="webpad.module.sourcepath">
    <dirset dir="${module.webpad.basedir}">
      <include name="servlet"/>
      <include name="version1"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.webpad" depends="compile.module.webpad.production,compile.module.webpad.tests" description="Compile module webpad"/>
  
  <target name="compile.module.webpad.production" depends="register.custom.compilers" description="Compile module webpad; production classes">
    <mkdir dir="${webpad.output.dir}"/>
    <javac2 destdir="${webpad.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.webpad}/javac">
      <compilerarg line="${compiler.args.webpad}"/>
      <bootclasspath refid="webpad.module.bootclasspath"/>
      <classpath refid="webpad.module.production.classpath"/>
      <src refid="webpad.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.webpad"/>
    </javac2>
    
    <copy todir="${webpad.output.dir}">
      <fileset dir="${module.webpad.basedir}/servlet">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.webpad.basedir}/version1">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.webpad.tests" depends="register.custom.compilers,compile.module.webpad.production" description="compile module webpad; test classes" unless="skip.tests"/>
  
  <target name="clean.module.webpad" description="cleanup module">
    <delete dir="${webpad.output.dir}"/>
    <delete dir="${webpad.testoutput.dir}"/>
  </target>
</project>