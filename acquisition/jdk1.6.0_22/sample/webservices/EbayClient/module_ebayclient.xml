<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ebayclient" default="compile.module.ebayclient">
  <dirname property="module.ebayclient.basedir" file="${ant.file.module_ebayclient}"/>
  
  <property name="module.jdk.home.ebayclient" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ebayclient" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ebayclient" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ebayclient" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="ebayclient.output.dir" value="${module.ebayclient.basedir}/../../../../out/production/EbayClient"/>
  <property name="ebayclient.testoutput.dir" value="${module.ebayclient.basedir}/../../../../out/test/EbayClient"/>
  
  <path id="ebayclient.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ebayclient.module.production.classpath">
    <path refid="${module.jdk.classpath.ebayclient}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="ebayclient.runtime.production.module.classpath">
    <pathelement location="${ebayclient.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="ebayclient.module.classpath">
    <path refid="${module.jdk.classpath.ebayclient}"/>
    <pathelement location="${ebayclient.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  <path id="ebayclient.runtime.module.classpath">
    <pathelement location="${ebayclient.testoutput.dir}"/>
    <pathelement location="${ebayclient.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="library.lib3.classpath"/>
    <path refid="library.modules1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ebayclient">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ebayclient">
    <patternset refid="excluded.from.module.ebayclient"/>
  </patternset>
  
  <path id="ebayclient.module.sourcepath">
    <dirset dir="${module.ebayclient.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ebayclient" depends="compile.module.ebayclient.production,compile.module.ebayclient.tests" description="Compile module EbayClient"/>
  
  <target name="compile.module.ebayclient.production" depends="register.custom.compilers" description="Compile module EbayClient; production classes">
    <mkdir dir="${ebayclient.output.dir}"/>
    <javac2 destdir="${ebayclient.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ebayclient}/javac">
      <compilerarg line="${compiler.args.ebayclient}"/>
      <bootclasspath refid="ebayclient.module.bootclasspath"/>
      <classpath refid="ebayclient.module.production.classpath"/>
      <src refid="ebayclient.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ebayclient"/>
    </javac2>
    
    <copy todir="${ebayclient.output.dir}">
      <fileset dir="${module.ebayclient.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ebayclient.tests" depends="register.custom.compilers,compile.module.ebayclient.production" description="compile module EbayClient; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ebayclient" description="cleanup module">
    <delete dir="${ebayclient.output.dir}"/>
    <delete dir="${ebayclient.testoutput.dir}"/>
  </target>
</project>