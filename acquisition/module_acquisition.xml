<?xml version="1.0" encoding="UTF-8"?>
<project name="module_acquisition" default="compile.module.acquisition">
  <dirname property="module.acquisition.basedir" file="${ant.file.module_acquisition}"/>
  
  <property name="module.jdk.home.acquisition" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.acquisition" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.acquisition" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.acquisition" value="-encoding GBK -source 1.6 ${compiler.args}"/>
  
  <property name="acquisition.output.dir" value="${module.acquisition.basedir}/out/production/acquisition"/>
  <property name="acquisition.testoutput.dir" value="${module.acquisition.basedir}/out/test/acquisition"/>
  
  <path id="acquisition.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="acquisition.module.production.classpath">
    <path refid="${module.jdk.classpath.acquisition}"/>
    <path refid="library.lib.classpath"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="acquisition.runtime.production.module.classpath">
    <pathelement location="${acquisition.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="acquisition.module.classpath">
    <path refid="${module.jdk.classpath.acquisition}"/>
    <pathelement location="${acquisition.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="acquisition.runtime.module.classpath">
    <pathelement location="${acquisition.testoutput.dir}"/>
    <pathelement location="${acquisition.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.acquisition">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.acquisition">
    <patternset refid="excluded.from.module.acquisition"/>
  </patternset>
  
  <path id="acquisition.module.sourcepath">
    <dirset dir="${module.acquisition.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.acquisition" depends="compile.module.acquisition.production,compile.module.acquisition.tests" description="Compile module acquisition"/>
  
  <target name="compile.module.acquisition.production" depends="register.custom.compilers" description="Compile module acquisition; production classes">
    <mkdir dir="${acquisition.output.dir}"/>
    <javac2 destdir="${acquisition.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.acquisition}/javac">
      <compilerarg line="${compiler.args.acquisition}"/>
      <bootclasspath refid="acquisition.module.bootclasspath"/>
      <classpath refid="acquisition.module.production.classpath"/>
      <src refid="acquisition.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.acquisition"/>
    </javac2>
    
    <copy todir="${acquisition.output.dir}">
      <fileset dir="${module.acquisition.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.acquisition.tests" depends="register.custom.compilers,compile.module.acquisition.production" description="compile module acquisition; test classes" unless="skip.tests"/>
  
  <target name="clean.module.acquisition" description="cleanup module">
    <delete dir="${acquisition.output.dir}"/>
    <delete dir="${acquisition.testoutput.dir}"/>
  </target>
</project>